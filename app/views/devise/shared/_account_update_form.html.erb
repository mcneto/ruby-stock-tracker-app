<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render 'devise/shared/error_messages', resource: resource %>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :first_name, 'First Name' %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: 'given-name', class: 'form-control', placeholder: 'First Name' %>
    </div>

    <div class="form-group col-md-6">
      <%= f.label :last_name, 'Last Name' %>
      <%= f.text_field :last_name, autocomplete: 'family-name', class: 'form-control', placeholder: 'Last Name' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autocomplete: 'email', class: 'form-control', placeholder: 'Email' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <h3 class="page-account__title">Change Password</h3>
  <hr>

  <div class="form-group">
    <%= f.label :password, 'New Password' %>
    <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control', placeholder: 'New Password' %>
    <% if minimum_password_length %>
      <small class="form-text text-muted"><%= minimum_password_length %> characters minimum</small>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, 'Password Confirmation' %>
    <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control', placeholder: 'Password Confirmation' %>
  </div>

  <hr>
  <div class="page-account__bottom">
    <div class="card-header"><h3>Confirmation</h3></div>

    <div class="card-body">
      <div class="form-group">
        <%= f.label :current_password, 'Enter your current password to save changes' %>
        <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control', placeholder: 'Current Password' %>
      </div>
    </div>
  </div>

  <div class="page-account__footer">
    <div class="user-action">
      <%= f.submit 'Save', class: 'btn btn-primary' %>
      <%= link_to 'Back', :back, class: 'btn btn-outline-primary' %>
    </div>
  </div>
<% end %>
